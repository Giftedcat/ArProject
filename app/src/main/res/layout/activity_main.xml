<?xml version="1.0" encoding="utf-8"?>
<com.zhy.android.percent.support.PercentRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:id="@+id/out_rl"
    android:layout_height="match_parent"
    tools:context="com.eastudio.ardemo.MainActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="28dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imgARTree"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="26dp"
            android:src="@drawable/vr_icon" />

        <ImageView
            android:id="@+id/imgAR"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ar_icon" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="24dp"
        android:layout_marginBottom="48dp"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:src="@drawable/harvest_icon" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:src="@drawable/water_icon" />

    </LinearLayout>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:src="@drawable/tree_s"
        app:layout_marginTopPercent="47.92%h" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_alignParentRight="true"
        android:background="@drawable/shape_main"
        app:layout_heightPercent="5.57%h"
        app:layout_marginTopPercent="4.48%h"
        android:gravity="center"
        app:layout_widthPercent="34.26%w">
        
        <ImageView
            android:src="@drawable/leaf"
            android:layout_marginRight="26dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:textColor="#6D9E4E"
            android:id="@+id/txtFraction"
            android:textSize="21sp"
            android:textStyle="bold"
            android:text="0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/signin_ll"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_alignParentRight="true"
        android:background="@drawable/shape_main"
        app:layout_heightPercent="5.57%h"
        app:layout_marginTopPercent="19.84%h"
        android:gravity="center"
        app:layout_widthPercent="21.39%w">

        <TextView
            android:textColor="#6D9E4E"
            android:textStyle="bold"
            android:textSize="18sp"
            android:text="签到"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/shop_ll"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_alignParentRight="true"
        android:background="@drawable/shape_main"
        app:layout_heightPercent="5.57%h"
        app:layout_marginTopPercent="26.09%h"
        android:gravity="center"
        app:layout_widthPercent="21.39%w">

        <TextView
            android:textColor="#6D9E4E"
            android:textStyle="bold"
            android:textSize="18sp"
            android:text="商店"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/manor_ll"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_alignParentRight="true"
        android:background="@drawable/shape_main"
        app:layout_heightPercent="5.57%h"
        app:layout_marginTopPercent="32.34%h"
        android:gravity="center"
        app:layout_widthPercent="21.39%w">

        <TextView
            android:textColor="#6D9E4E"
            android:textStyle="bold"
            android:textSize="18sp"
            android:text="庄园"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>

</com.zhy.android.percent.support.PercentRelativeLayout>
